<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/action_bar">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_start_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="动画" />

            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/btn_start_animation"></lecho.lib.hellocharts.view.PieChartView>

            <com.yzx.yzxpractice.view.PageView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@id/chart"
                android:background="#ccc"></com.yzx.yzxpractice.view.PageView>
        </RelativeLayout>
    </ScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        fab:menu_animationDelayPerItem="0"
        fab:menu_colorNormal="#FFB805"
        fab:menu_colorPressed="#F2AB00"
        fab:menu_colorRipple="#D99200"
        fab:menu_labels_colorNormal="#fff"
        fab:menu_labels_cornerRadius="2dp"
        fab:menu_labels_hideAnimation="@anim/fab_scale_down"
        fab:menu_labels_position="right"
        fab:menu_labels_showAnimation="@anim/fab_scale_up"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_textColor="#000"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_compass"
            fab:fab_colorNormal="#fff"
            fab:fab_label="提问"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_view"
            fab:fab_colorNormal="#fff"
            fab:fab_label="发表"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            fab:fab_colorNormal="#fff"
            fab:fab_label="举报"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>